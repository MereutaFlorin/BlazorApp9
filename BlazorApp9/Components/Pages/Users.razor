@page "/users"
@inject MongoDbService MongoService

<h3>Users</h3>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else if (!users.Any())
{
    <p>No users found.</p>
}
else
{
    <ul>
        @foreach (var user in users)
        {
            <li>@user.Name</li>
        }
    </ul>
}

@code {
    private List<User> users;

    protected override async Task OnInitializedAsync()
    {
        users = await MongoService.GetAllAsync();
    }
}